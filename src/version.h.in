#pragma once


#define ELOOK_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define ELOOK_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define ELOOK_VERSION_PATCH @PROJECT_VERSION_PATCH@
#define ELOOK_VERSION_RELEASE_TYPE @CMAKE_BUILD_TYPE@

#define ELOOK_VERSION (10000 * ELOOK_VERSION_MAJOR \
                      + 100 * ELOOK_VERSION_MINOR \
                      + ELOOK_VERSION_PATCH)

// Magic macros to make ELOOK_VERSION_STRING that looks like "1.2.3"
#define ELOOK_MAKE_VERSION_STRING2(a,b,c,d) #a "." #b "." #c " - " #d
#define ELOOK_MAKE_VERSION_STRING(a,b,c,d) ELOOK_MAKE_VERSION_STRING2(a,b,c,d)
#define ELOOK_VERSION_STRING \
    ELOOK_MAKE_VERSION_STRING(ELOOK_VERSION_MAJOR, \
                              ELOOK_VERSION_MINOR, \
                              ELOOK_VERSION_PATCH, \
                              ELOOK_VERSION_RELEASE_TYPE)
#define ELOOK_VERSION_PRETTY "Eclair Looks - " ELOOK_VERSION_STRING
